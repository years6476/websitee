    <script>
        // ডেটা স্টোরেজ (লোকালস্টোরেজ ব্যবহার করে)
        let contents = JSON.parse(localStorage.getItem('contents')) || [];
        
        // DOM এলিমেন্টস
        const menuToggle = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const contentDisplay = document.getElementById('content-display');
        const homeContent = document.getElementById('home-content');
        const loginForm = document.getElementById('login-form');
        const adminPanel = document.getElementById('admin-panel');
        const adminLoginForm = document.getElementById('admin-login');
        const loginError = document.getElementById('login-error');
        const logoutBtn = document.getElementById('logout-btn');
        const contentUploadForm = document.getElementById('content-upload');
        const contentTypeSelect = document.getElementById('content-type');
        const articleEditor = document.getElementById('article-editor');
        const contentList = document.getElementById('content-list');
        const adminTabs = document.querySelectorAll('.admin-tab');
        const adminContents = document.querySelectorAll('.admin-content');
        
        // মোবাইল মেনু টগল
        menuToggle.addEventListener('click', () => {
            mobileMenu.classList.toggle('active');
        });
        
        // কন্টেন্ট টাইপ পরিবর্তন
        contentTypeSelect.addEventListener('change', function() {
            if (this.value === 'article') {
                articleEditor.style.display = 'block';
            } else {
                articleEditor.style.display = 'none';
            }
        });
        
        // মিডিয়া ইনসার্ট বাটন
        document.getElementById('insert-image').addEventListener('click', function() {
            insertMediaAtCursor('[ছবি: ', ']');
        });
        
        document.getElementById('insert-audio').addEventListener('click', function() {
            insertMediaAtCursor('[অডিও: ', ']');
        });
        
        document.getElementById('insert-video').addEventListener('click', function() {
            insertMediaAtCursor('[ভিডিও: ', ']');
        });
        
        document.getElementById('insert-file').addEventListener('click', function() {
            insertMediaAtCursor('[ফাইল: ', ']');
        });
        
        function insertMediaAtCursor(before, after) {
            const textarea = document.getElementById('article-content');
            const start = textarea.selectionStart;
            const end = textarea.selectionEnd;
            const text = textarea.value;
            const beforeText = text.substring(0, start);
            const afterText = text.substring(end, text.length);
            
            textarea.value = beforeText + before + after + afterText;
            textarea.focus();
            textarea.selectionStart = textarea.selectionEnd = start + before.length;
        }
        
        // নেভিগেশন লিংক ক্লিক
        document.querySelectorAll('a[data-content]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const contentType = this.getAttribute('data-content');
                showContent(contentType);
                if (mobileMenu.classList.contains('active')) {
                    mobileMenu.classList.remove('active');
                }
            });
        });
        
        // এডমিন লিংক ক্লিক
        document.getElementById('admin-link').addEventListener('click', function(e) {
            e.preventDefault();
            showLoginForm();
        });
        
        document.getElementById('admin-link-mobile').addEventListener('click', function(e) {
            e.preventDefault();
            showLoginForm();
            if (mobileMenu.classList.contains('active')) {
                mobileMenu.classList.remove('active');
            }
        });
        
        // এডমিন ট্যাব ক্লিক
        adminTabs.forEach(tab => {
            tab.addEventListener('click', function() {
                const tabId = this.getAttribute('data-tab');
                
                adminTabs.forEach(t => t.classList.remove('active'));
                adminContents.forEach(c => c.classList.remove('active'));
                
                this.classList.add('active');
                document.getElementById(`${tabId}-tab`).classList.add('active');
                
                if (tabId === 'manage') {
                    loadContentList();
                }
            });
        });
        
        // এডমিন লগইন
        adminLoginForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if (username === 'ashraful' && password === '152007') {
                showAdminPanel();
            } else {
                loginError.style.display = 'block';
                setTimeout(() => {
                    loginError.style.display = 'none';
                }, 3000);
            }
        });
        
        // লগআউট
        logoutBtn.addEventListener('click', function() {
            showHomeContent();
        });
        
        // কন্টেন্ট আপলোড
        contentUploadForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const type = document.getElementById('content-type').value;
            const title = document.getElementById('content-title').value;
            const description = document.getElementById('content-description').value;
            const fileInput = document.getElementById('content-file');
            const file = fileInput.files[0];
            
            let content = '';
            if (type === 'article') {
                content = document.getElementById('article-content').value;
            }
            
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const newContent = {
                        id: Date.now(),
                        type: type,
                        title: title,
                        description: description,
                        content: content,
                        file: {
                            name: file.name,
                            data: e.target.result,
                            type: file.type
                        },
                        date: new Date().toLocaleDateString('bn-BD')
                    };
                    
                    contents.push(newContent);
                    localStorage.setItem('contents', JSON.stringify(contents));
                    
                    alert('কন্টেন্ট সফলভাবে আপলোড হয়েছে!');
                    contentUploadForm.reset();
                    articleEditor.style.display = 'none';
                    
                    // ম্যানেজ ট্যাবে স্যুইচ করুন
                    adminTabs.forEach(t => t.classList.remove('active'));
                    adminContents.forEach(c => c.classList.remove('active'));
                    
                    document.querySelector('.admin-tab[data-tab="manage"]').classList.add('active');
                    document.getElementById('manage-tab').classList.add('active');
                    
                    loadContentList();
                };
                reader.readAsDataURL(file);
            }
        });
        
        // কন্টেন্ট দেখান
        function showContent(type) {
            homeContent.classList.add('active');
            loginForm.style.display = 'none';
            adminPanel.style.display = 'none';
            
            const filteredContents = contents.filter(content => content.type === type);
            displayContents(filteredContents, type);
        }
        
        // হোম কন্টেন্ট দেখান
        function showHomeContent() {
            homeContent.classList.add('active');
            loginForm.style.display = 'none';
            adminPanel.style.display = 'none';
            displayContents(contents, 'সকল');
        }
        
        // লগইন ফর্ম দেখান
        function showLoginForm() {
            homeContent.classList.remove('active');
            loginForm.style.display = 'block';
            adminPanel.style.display = 'none';
        }
        
        // এডমিন প্যানেল দেখান
        function showAdminPanel() {
            homeContent.classList.remove('active');
            loginForm.style.display = 'none';
            adminPanel.style.display = 'block';
        }
        
        // কন্টেন্ট ডিসপ্লে
        function displayContents(contentsArray, type) {
            contentDisplay.innerHTML = '';
            
            if (contentsArray.length === 0) {
                contentDisplay.innerHTML = `<p style="text-align: center; grid-column: 1/-1; padding: 40px;">${type} কন্টেন্ট পাওয়া যায়নি</p>`;
                return;
            }
            
            contentsArray.forEach(content => {
                const card = document.createElement('div');
                card.className = 'content-card';
                
                // ইমেজ জেনারেট করুন কন্টেন্ট টাইপ অনুযায়ী
                let imageUrl = '';
                if (content.type === 'video') {
                    imageUrl = 'https://images.unsplash.com/photo-1559703243-9094e138a8a8?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80';
                } else if (content.type === 'audio') {
                    imageUrl = 'https://images.unsplash.com/photo-1571974599782-87624638275f?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80';
                } else {
                    imageUrl = 'https://images.unsplash.com/photo-1581276879432-15e50529f34b?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80';
                }
                
                card.innerHTML = `
                    <div class="content-image" style="background-image: url('${imageUrl}')"></div>
                    <div class="content-details">
                        <h3>${content.title}</h3>
                        <div class="content-meta">
                            <span><i class="far fa-calendar"></i> ${content.date}</span>
                            <span><i class="fas fa-${content.type === 'video' ? 'video' : content.type === 'audio' ? 'music' : 'file-alt'}"></i> ${content.type === 'video' ? 'ভিডিও' : content.type === 'audio' ? 'অডিও' : 'আর্টিকেল'}</span>
                        </div>
                        <p>${content.description}</p>
                        <div class="content-actions">
                            <a href="#" class="view-btn" data-id="${content.id}">দেখুন</a>
                            <button class="download-btn" data-id="${content.id}"><i class="fas fa-download"></i> ডাউনলোড</button>
                        </div>
                    </div>
                `;
                
                contentDisplay.appendChild(card);
            });
            
            // ডাউনলোড বাটন ইভেন্ট যোগ করুন
            document.querySelectorAll('.download-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const contentId = parseInt(this.getAttribute('data-id'));
                    downloadContent(contentId);
                });
            });
        }
        
        // কন্টেন্ট ডাউনলোড
        function downloadContent(id) {
            const content = contents.find(c => c.id === id);
            if (content && content.file) {
                const a = document.createElement('a');
                a.href = content.file.data;
                a.download = content.file.name;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
            }
        }
        
        // কন্টেন্ট লিস্ট লোড (এডমিন প্যানেলের জন্য)
        function loadContentList() {
            contentList.innerHTML = '';
            
            if (contents.length === 0) {
                contentList.innerHTML = '<p>কোন কন্টেন্ট পাওয়া যায়নি</p>';
                return;
            }
            
            contents.forEach(content => {
                const item = document.createElement('div');
                item.className = 'content-item';
                item.innerHTML = `
                    <div class="content-info">
                        <h4>${content.title}</h4>
                        <p>টাইপ: ${content.type === 'video' ? 'ভিডিও' : content.type === 'audio' ? 'অডিও' : 'আর্টিকেল'} | তারিখ: ${content.date}</p>
                    </div>
                    <div class="content-actions-admin">
                        <button class="delete-btn" data-id="${content.id}"><i class="fas fa-trash"></i> ডিলিট</button>
                    </div>
                `;
                
                contentList.appendChild(item);
            });
            
            // ডিলিট বাটন ইভেন্ট যোগ করুন
            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const contentId = parseInt(this.getAttribute('data-id'));
                    deleteContent(contentId);
                });
            });
        }
        
        // কন্টেন্ট ডিলিট
        function deleteContent(id) {
            if (confirm('আপনি কি এই কন্টেন্ট ডিলিট করতে চান?')) {
                contents = contents.filter(c => c.id !== id);
                localStorage.setItem('contents', JSON.stringify(contents));
                loadContentList();
                
                // হোমপেজেও আপডেট করুন
                displayContents(contents, 'সকল');
            }
        }
        
        // প্রাথমিক কন্টেন্ট লোড
        showHomeContent();
        displayContents(contents, 'সকল');
    </script>
</body>
</html>
